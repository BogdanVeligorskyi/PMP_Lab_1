<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    android:stretchColumns="*">
    <View
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="64dp"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/question_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@id/space"
        android:gravity="start"
        android:textSize="18sp"
        android:text="@string/question_no" />

    <TextView
        android:id="@+id/question_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@id/space"
        android:gravity="end"
        android:textSize="18sp"
        android:text="Earned:" />
    <View
        android:id="@+id/space_2"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_centerInParent="true"/>

    <CheckBox
        android:id="@+id/is_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@id/space_2"
        android:textSize="18sp"
        android:text="@string/hint" />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:text="$ 2 000 000"
        android:layout_toEndOf="@id/space_2"/>
    <TextView
        android:id="@+id/text_of_question"
        android:layout_below="@id/is_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="!!!ACHTUNG ACHTUNGhhhhhhhhhhhh!!!"
        android:textAlignment="center"
        android:gravity="center" />

    <View
        android:id="@+id/center_square"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/button_4"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/center_square"
        android:layout_below="@id/button_3"
        android:text="D: Var 4"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/button_2"
        android:layout_below="@id/button_1"
        android:layout_toStartOf="@id/center_square"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:text="B: Var 2" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_below="@id/text_of_question"
        android:layout_toStartOf="@id/center_square"
        android:text="A: Var 1" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_below="@id/text_of_question"
        android:layout_toEndOf="@id/center_square"
        android:text="C: Var 3"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/quitPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_below="@id/button_2"
        android:minWidth="150dp"
        android:text="Exit | Take the winnings" />

</RelativeLayout>